@Model PacchettoViaggio

<div class="row justify-content-center">
    <div class="col-4 card p-0 m-2 shadow mb-5 bg-white rounded">
        <img src="@Model.Image" alt="">
        <div class="card-body p-0">
            <h5 class="card-title bg-warning text-white p-3">@Model.Titolo</h5>
            <p class="card-text text-muted">@Model.Description</p>
                    
        </div>
        <hr>
        <p class="text-warning"><strong>@Model.Giorni - @Model.Destinazioni</strong> </p>
        <p class="text-muted"><strong>@Model.Prezzo/&euro;</strong>/person</p> 
                
    </div>
</div>